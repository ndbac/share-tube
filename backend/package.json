{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "local:database": "POSTGRES_USER=sharetube POSTGRES_PASSWORD=sharetube POSTGRES_DB=sharetube docker-compose -f ./db/docker-compose.yml up -d",
    "local:server": "POSTGRES_USER=sharetube POSTGRES_PASSWORD=sharetube POSTGRES_DB=sharetube docker-compose -f ./docker-compose.yml up -d",
    "test": "npm run prepare:test && cross-env NODE_ENV=test jest --runInBand --forceExit --silent",
    "test:watch": "npm run prepare:test && cross-env NODE_ENV=test jest --watch --runInBand --forceExit",
    "test:cov": "npm run prepare:test && cross-env NODE_ENV=test jest --coverage --runInBand --forceExit",
    "test:debug": "npm run prepare:test && cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --detectOpenHandles --forceExit",
    "prepare:test": "POSTGRES_USER=test POSTGRES_PASSWORD=test POSTGRES_DB=test docker-compose -f ./test/docker-compose.yml up -d",
    "typeorm": "ts-node --require tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:generate": "npm run typeorm -- -d ./typeorm.config.ts migration:generate",
    "migration:run": "npm run typeorm migration:run -- -d ./typeorm.config.ts",
    "migration:revert": "npm run typeorm -- -d ./typeorm.config.ts migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^10.4.1",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/typeorm": "9.0.1",
    "@nestjs/websockets": "^10.4.1",
    "axios": "^1.7.5",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "config": "^3.3.12",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "socket.io": "^4.7.5",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.20",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/config": "^3.3.4",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.8",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "^4.17.7",
    "@types/node": "^16.0.0",
    "@types/pg": "^8.11.8",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": "test[\\/].*\\.spec\\.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/migrations/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "setupFilesAfterEnv": []
  }
}
